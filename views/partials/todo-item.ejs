<li
  id="todo-<%= todo.id %>"
  class="todo-item"
>
  <form
    hx-put="/todos/<%= todo.id %>"
    hx-target="#todo-<%= todo.id %>"
    hx-swap="outerHTML"
    hx-on:change="this.requestSubmit()"
    class="flex items-center gap-3 px-4 py-3"
  >
    <input type="checkbox" id="todo-item-<%= todo.id %>" name="completed" <%= todo.completed ?
    'checked' : '' %> class="h-4 w-4 rounded border-gray-300 text-blue-600 focus:ring-blue-500" >
    <input
      type="hidden"
      name="task"
      value="<%= todo.task %>"
    />
    <label
      for="todo-item-<%= todo.id %>"
      class="cursor-pointer flex-1 <%= todo.completed ? 'line-through text-gray-500' : 'text-gray-900' %>"
    >
      <%= todo.task %>
    </label>
    <button
      type="button"
      hx-delete="/todos/<%= todo.id %>"
      hx-target="#todo-list"
      hx-swap="outerHTML transition:true"
      hx-confirm="Are you sure you want to delete this task?"
      class="text-red-600 hover:text-red-800 px-2 py-1 rounded bg-red-50 hover:bg-red-100 cursor-pointer"
    >
      Delete
    </button>
  </form>
</li>
